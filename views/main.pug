doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/stylesheets/reset.css')
    link(rel='stylesheet', href='/stylesheets/main.css')
    title Document
  body
    .main-container
      .main-list-wrap
        .title-bar
          .number No.
          .title 제목
          .created-time 작성일 
          .creater 작성자
        .post-list
          each item, index in data
            .post-item
              .number= index + 1
              .title= item.title
              .created-time= item.date
              .creater= item.writer
      a.main-add-button(
        href="/post/add"
      ) ㄸ얏
      script(src="detail.js") 